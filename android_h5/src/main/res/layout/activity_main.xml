<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:tool="http://schemas.android.com/apk/res-auto"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <TextView
            android:id="@+id/name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/form_name" />

        <TextView
            android:id="@+id/name_tv"
            android:layout_toRightOf="@+id/name_label"
            android:text="@string/hint_text"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <TextView
            android:id="@+id/favorite_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/form_favorite" />

        <TextView
            android:id="@+id/favorite_tv"
            android:layout_toRightOf="@+id/favorite_label"
            android:text="@string/hint_text"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/transform_h5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/transform_h5_btn_text"/>


    <WebView
      android:id="@+id/web_view"
      android:layout_width="match_parent"
      android:layout_height="150dp"></WebView>

    <EditText
      android:id="@+id/result_tv"
      android:layout_marginTop="10dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      tools:text="result"/>

    <Button
      android:id="@+id/btn_click"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="确定"/>
</LinearLayout>